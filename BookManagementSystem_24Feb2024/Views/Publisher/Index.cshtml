@model IEnumerable<BMS.DataModel.Publisher>


    <div class="row">
        <div class="mb-2 mt-3 col-md-6 offset-3">
            <a class="btn btn-sm btn-primary" asp-action="Create">+Add</a>
        </div>
        @*<div class="offset-1">
            <i>@ViewBag.Msg</i>
        </div>*@
    </div>
    <div class="row">
       
        <div class="col-md-6 offset-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Publisher Name
                        </th>
                        <th>
                            Registration Number
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PublisherName</td>
                                <td>@item.RegNo</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@item.PublisherId" method="post">
                                        <div class="btn-group" role="group">
                                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.PublisherId">Edit</a>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                There is no data!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

