@model IEnumerable<BMS.DataModel.Publisher>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="col-md-6 offset-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Publisher Name
                        </th>
                        <th>
                            Registration Number
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PublisherName</td>
                                <td>@item.RegNo</td>
                                <td>
                                    Edit|Remove
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                There is no data!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
