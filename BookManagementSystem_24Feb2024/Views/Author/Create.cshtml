@*@model BMS.DataModel.Publisher*@
@model Author


    <div class="row">
        <div class="col-md-6 offset-3">

            <form asp-action="Create" asp-controller="Author" method="post">
                <div class="mt-2">
                    <label class="form-label">Name</label>
                    @*@Html.TextBoxFor(x => x.PublisherName,"",new {@class="form-control" })*@
                    <input asp-for="AuthorName" class="form-control" />
                </div>
                <div class="mt-2">
                    <label class="form-label">Gender</label>
                     
                    @*@Html.TextBoxFor(x => x.PublisherName,"",new {@class="form-control" })*@
                  Male   <input type="radio" asp-for="Gender" value="M"  />
                  Female  <input type="radio" asp-for="Gender" value="F"/>
                </div>
                <div class="mt-2">
                    <label class="form-label">Mob No.</label>
                    <input asp-for="MobileNumber" class="form-control" />
                </div>
                <div class="mt-2">
                    <label class="form-label">Email Address</label>
                    <input asp-for="EmailAddress" class="form-control" />
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
