@model IEnumerable<BMS.DataModel.Author>

    <div class="row">
        <div class="mb-2 mt-3 col-md-6 offset-3">
            <a class="btn btn-sm btn-primary" asp-action="Create">+Add</a>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6 offset-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Author Name
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Mobile No
                        </th>
                        <th>
                            Email Address
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>@item.AuthorName</td>
                        <td>@item.Gender</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.EmailAddress</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.AuthorId" method="post">
                                <div class="btn-group" role="group">
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a>
                                </div>
                            </form>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                There is no data!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

