@model IEnumerable<BMS.DataModel.Book>

<style>
    .BookCoverImage {
        height: 100px;
        width: 100px;
    }
</style>
    <div class="row">
        <div class="mb-2 mt-3 col-md-6 offset-3">
            <a class="btn btn-sm btn-primary" asp-action="Create">+Add</a>
        </div>
    </div>
    <div class="row">

        <div class="col-md-8 offset-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Book
                        </th>
                        <th>
                            Book Name
                        </th>
                        <th>
                            ISBN
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            <img src="~/CoverImages/@item.ImageUrl" class="BookCoverImage" />
                        </td>
                        <td>@item.BookName</td>
                        <td>@item.ISBN</td>
                        <td>@item.author.AuthorName</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.BookId" method="post">
                                <div class="btn-group" role="group">
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.BookId">Edit</a>
                                </div>
                            </form>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                There is no data!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

