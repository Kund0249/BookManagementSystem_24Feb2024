@*@model BMS.DataModel.Publisher*@
@model BookCreateModel;

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-md-6 offset-3">

            <form asp-action="Create" asp-controller="Book" method="post" enctype="multipart/form-data">
                <div class="mt-2">
                    <label class="form-label">Book Name</label>
                    @*@Html.TextBoxFor(x => x.PublisherName,"",new {@class="form-control" })*@
                    <input asp-for="BookName" class="form-control" />
                </div>
                <div class="mt-2">
                    <label class="form-label">Select Author</label>
                    <select asp-for="AuhtorId" asp-items="@Model.Auhtors" class="form-control">
                        <option>Select Author</option>
                    </select>
                </div>
                <div class="mt-2">
                    <label class="form-label">ISBN No.</label>
                    <input asp-for="ISBN" class="form-control" />
                </div>
                <div class="mt-2">
                    <label class="form-label">Is Active</label>
                    <input asp-for="IsActive" class="form-check" />
                </div>
                <div class="mt-2">
                    <label class="form-label">Cover Image</label>
                    <input asp-for="ImageFile" class="form-control" />
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>